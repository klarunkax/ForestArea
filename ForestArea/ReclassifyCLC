
#CORINE LAND COVER
#1.Reclassify CLC
# Description: Reclassifies the values in a raster.
# Requirements: Spatial Analyst Extension

# Import system modules
import arcpy
from arcpy import env
from arcpy.sa import *

# Set environment settings
env.workspace = "C:/Users/Klara/Documents/Prace/JRC/Teleworking/2022/Forest area EU/Data/CLC"

# Set local variables
inRaster = "U2000_CLC1990_V2020_20u1.tif"
inRaster2 = "U2006_CLC2000_V2020_20u1.tif"
inRaster3 = "U2018_CLC2012_V2020_20u1.tif"
inRaster4 = "U2018_CLC2018_V2020_20u1.tif"

reclassField = "Value"
remap = RemapValue([["23", 1], ["24", 1],["25", 1]])

# Check out the ArcGIS Spatial Analyst extension license
arcpy.CheckOutExtension("Spatial")

# Execute Reclassify
#outReclassify = Reclassify(inRaster, reclassField, remap, "NODATA")
outReclassify2 = Reclassify(inRaster2, reclassField, remap, "NODATA")
outReclassify3 = Reclassify(inRaster3, reclassField, remap, "NODATA")
outReclassify4 = Reclassify(inRaster4, reclassField, remap, "NODATA")

# Save the output
#outReclassify.save("C:/Users/Klara/Documents/Prace/JRC/Teleworking/2022/Forest area EU/Data/CLC/CLCreclass1990.tif")
outReclassify2.save("C:/Users/Klara/Documents/Prace/JRC/Teleworking/2022/Forest area EU/Data/CLC/CLCreclass2000.tif")
outReclassify3.save("C:/Users/Klara/Documents/Prace/JRC/Teleworking/2022/Forest area EU/Data/CLC/CLCreclass2012.tif")
outReclassify4.save("C:/Users/Klara/Documents/Prace/JRC/Teleworking/2022/Forest area EU/Data/CLC/CLCreclass2018.tif")